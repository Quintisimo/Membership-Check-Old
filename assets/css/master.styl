normalize-css()

@import '_settings'

html, body
  height 100%
  font-family sans-serif
  color white
  overflow hidden

h1
  text-align center


body
  bg('../img/background.svg', center)
  background-size cover

#formWrapper
  display flex
  align-items space-between
  flex-wrap wrap
  height inherit

  form
    display block
    width 100%

  label
    font-size 30px
    display block
    text-align center
    padding-bottom 10px

  input
    width 300px
    margin 10px 0
    padding 10px
    margin-left 50%
    transform translateX(-50%)
    border 4px solid orange

  input[type="submit"]
    width 90px
    outline none
    background orange
    color white

  .Messages
    relative()

    h1
      absolute(top 0px left 50%)
      transform translateX(-50%)
      padding 10px

    .success
      color green
      border 5px solid green
      display none

    .failed
      color red
      border 5px solid red
      display none
